.comment-list-container {
  padding-top: 50rpx;
  margin-bottom: 100rpx;
  display: flex;
  flex-direction: column;
}
.comment-item {
  background-color: #ffffff;
  border-bottom: 6rpx solid #e0e0e0;
  padding: 40rpx 70rpx;
}
.comment-item:last-child {
  border-bottom: 0rpx;
}
.comment-title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.user-avatar {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}
.comment-user-name {
  padding-left: 20rpx;
  color: #000000;
  font-size: 35rpx;
  line-height: 49rpx;
  flex: 2;
}
.comment-create-time {
  font-size: 25rpx;
  line-height: 35rpx;
  color: #616161;
  padding-left: 20rpx;
}
.comment-content {
  margin-top: 20rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  height: 42rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.bottom-btn {
  height: 100rpx;
  width: 100%;
  background-color: #ffffff;
  color: #9e9e9e;
  font-size: 40rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  text-align: center;
  border-radius: 0;
  border-top: 2rpx solid #9e9e9e;
}
.audio-container {
  border: 1rpx solid #9e9e9e;
  text-align: center;
  display: flex;
  width: 300rpx;
  height: 60rpx;
  margin-top: 20rpx;
  background-color: #eeeeee;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-radius: 8rpx;
}
.audio-image {
  margin-left: 20rpx;
  height: 60rpx;
  width: 60rpx;
}
.audio-duration {
  font-size: 30rpx;
  line-height: 42rpx;
}