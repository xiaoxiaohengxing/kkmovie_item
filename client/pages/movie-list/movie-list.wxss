.search-container {
  width: 100%;
  height: 100rpx;
  background-color: rgba(176,190,197, 0.95);
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  z-index: 999;
  display: flex;
  flex-direction: row;
}
.image-container {
  height: 50rpx;
  width: 50rpx;
  margin: 25rpx;
}
.search-image {
  height: 50rpx;
  width: 50rpx;
}
.search-input {
  flex: 1 0 auto;
  height: 50rpx;
  font-size: 30rpx;
  line-height: 45rpx;
  font-weight: 200;
  margin: 25rpx 40rpx 30rpx 0rpx;
  border-bottom: 1rpx solid #000000;
}
.search-input-placeholder {
  font-size: 30rpx;
  line-height: 45rpx;
  font-weight: 200;
}
.content-container {
  padding: 50rpx 60rpx 0;
  margin-top:100rpx;
}
.movie-container {
  height: 300rpx;
  width: 100%;
   border-radius: 20rpx; 
  box-shadow: 0 6px 10px 0 rgba(0,0,0,.23), 0 6px 10px 0 rgba(0,0,0,.23);
  position: relative;
  margin-bottom: 50rpx;
  background-color: #ffffff;
  overflow: hidden;
}
.movie-description {
  margin-left: 200rpx;
  padding: 30rpx;
}
.movie-image {
  position: absolute;
  height: 300rpx;
  width: 200rpx;
}
.movie-title {
  font-size: 35rpx;
  line-height: 49rpx;
  font-weight: bold;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.movie-category {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #9e9e9e;
}
.movie-empty {
  margin: 150rpx 50rpx 50rpx;
  height: 300rpx;
  width: 650rpx;
  border-radius: 20rpx; 
  box-shadow: 0 6px 10px 0 rgba(0,0,0,.23), 0 6px 10px 0 rgba(0,0,0,.23);
  position: relative;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty-image {
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
}
.empty-text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(139, 139, 139, 0.8);
}