.container {
  padding: 0rpx 60rpx;
  margin-bottom: 150rpx;
}
.page-title-container {
  margin: 50rpx auto;
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  line-height: 42rpx;
}
.checked-title {
  color: #ffa726;
  font-weight: bold;
}
.unchecked-title {
  color: #9e9e9e;
  font-weight: normal;
}
.comment-container {
  height: 300rpx;
  width: 100%;
  border-radius: 20rpx; 
  box-shadow: 0 6px 10px 0 rgba(0,0,0,.23), 0 6px 10px 0 rgba(0,0,0,.23);
  position: relative;
  margin-bottom: 50rpx;
  background-color: #ffffff;
  overflow: hidden;
}
.movie-description {
  margin-left: 200rpx;
  padding: 30rpx;
}
.movie-image {
  position: absolute;
  height: 300rpx;
  width: 200rpx;
}
.movie-title {
  font-size: 35rpx;
  line-height: 49rpx;
  font-weight: bold;
}
.comment-empty {
  margin: 50rpx;
  height: 300rpx;
  width: 650rpx;
  border-radius: 20rpx; 
  box-shadow: 0 6px 10px 0 rgba(0,0,0,.23), 0 6px 10px 0 rgba(0,0,0,.23);
  position: relative;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty-image {
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
}
.empty-text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(139, 139, 139, 0.8);
}
.bottom-btn {
  height: 100rpx;
  width: 100%;
  background-color: #ffffff;
  color: #9e9e9e;
  font-size: 40rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  text-align: center;
  border-radius: 0;
  border-top: 2rpx solid #9e9e9e;
}
.user-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
}
.user-avatar {
  height: 60rpx;
  width: 60rpx;
  background: #eeeeee;
  border-radius: 50%;
}
.user-name {
  padding-left: 20rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #9e9e9e;
}
.comment-text {
  position: relative;
  margin-top: 20rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  height: 84rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.audio-container {
  border: 1rpx solid #9e9e9e;
  text-align: center;
  display: flex;
  width: 300rpx;
  height: 60rpx;
  margin-top: 20rpx;
  background-color: #eeeeee;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-radius: 8rpx;
}
.audio-image {
  margin-left: 20rpx;
  height: 60rpx;
  width: 60rpx;
}
.audio-duration {
  font-size: 30rpx;
  line-height: 42rpx;
}