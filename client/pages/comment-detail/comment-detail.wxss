.movie-container {
  padding: 10% 50rpx 5%;  
}
.movie-detail {
  background-color: #ffffff;
  border: 2rpx solid #bdbdbd;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.movie-image {
  height: 300rpx;
  width: 200rpx;
  margin-top: -30rpx; 
}
.movie-title {
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.comment-title-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-top: 20rpx;
}
.user-avatar-container {
  text-align: right;
  width: 25%;
}
.user-avatar {
  height: 100rpx;
  width: 100rpx;
  background: #eeeeee;
  border-radius: 50%;
}
.comment-title {
  font-size: 35rpx;
  line-height: 49rpx;
  color: #757575;
  padding-right: 40rpx;
  padding-left:20rpx;
}
.comment-container {
  width: 100%;
}
.comment-container .comment-left {
  display: inline-block;
  font-size: 100rpx;
  text-align: right;
  width: 20%;
  margin-left: 5%;
  vertical-align: top;
}
.comment-container .comment-right {
  display: inline-block;
  width: 70%;
  vertical-align: top;
  margin-right: 5%;
}
.btn-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}
.btn-wrapper {
  border: 1rpx solid #bdbdbd;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  width: 35%;
}
.btn-image {
  width: 50rpx;
  height: 50rpx;
}
.btn-image-see {
  width: 45rpx;
  height: 30rpx;
}
.btn-text {
  font-size: 32rpx;
  line-height: 48rpx;
  padding-left: 20rpx;
}
.comment-content {
  width: 100%;
  word-wrap: break-word;
  min-height: 300rpx;
  font-size: 32rpx;
  line-height: 45rpx;
}
.audio-container {
  border: 1rpx solid #9e9e9e;
  text-align: center;
  display: flex;
  width: 350rpx;
  height: 80rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 300rpx;
  border-radius: 8rpx;
  background-color: #eeeeee;
}
.audio-image {
  height: 60rpx;
  width: 60rpx;
}
.audio-duration {
  font-size: 30rpx;
  line-height: 42rpx;
}

.unstar {
  color: #bfbfbf;
}
.stared {
  color: #000000;
}